<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Enquiry Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#f4f6f9]">

<!-- HEADER -->
<%- include("../partials/header") %>

<div class="flex">

  <!-- SIDEBAR -->
  <%- include("../partials/sidebar") %>

  <!-- MAIN CONTENT -->
  <main class="flex-1 p-6">

    <!-- TITLE -->
    <div class="mb-6">
      <h1 class="text-2xl font-bold">Enquiry Management</h1>
      <p class="text-sm text-gray-500">
        Manage student enquiries from courses and contact forms
      </p>
    </div>

    <!-- STATS -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-6">

      <div class="bg-white p-4 rounded-xl shadow-sm">
        <p class="text-xs text-gray-500">Total Enquiries</p>
        <p class="text-2xl font-bold"><%= enquiries.length %></p>
        <p class="text-xs text-blue-600 mt-1">All</p>
      </div>

      <div class="bg-white p-4 rounded-xl shadow-sm">
        <p class="text-xs text-gray-500">New</p>
        <p class="text-2xl font-bold">
          <%= enquiries.filter(e => e.status === "new").length %>
        </p>
        <p class="text-xs text-green-600 mt-1">Fresh</p>
      </div>

      <div class="bg-white p-4 rounded-xl shadow-sm">
        <p class="text-xs text-gray-500">Contacted</p>
        <p class="text-2xl font-bold">
          <%= enquiries.filter(e => e.status === "contacted").length %>
        </p>
        <p class="text-xs text-blue-600 mt-1">Follow-up</p>
      </div>

      <div class="bg-white p-4 rounded-xl shadow-sm">
        <p class="text-xs text-gray-500">Enrolled</p>
        <p class="text-2xl font-bold">
          <%= enquiries.filter(e => e.status === "enrolled").length %>
        </p>
        <p class="text-xs text-green-600 mt-1">Converted</p>
      </div>

      <div class="bg-white p-4 rounded-xl shadow-sm">
        <p class="text-xs text-gray-500">Closed</p>
        <p class="text-2xl font-bold">
          <%= enquiries.filter(e => e.status === "closed").length %>
        </p>
        <p class="text-xs text-orange-600 mt-1">Archived</p>
      </div>

    </div>

    <!-- ENQUIRY LIST -->
    <div class="bg-white rounded-xl shadow-sm p-5">

      <div class="flex justify-between items-center mb-4">
        <h2 class="font-semibold text-lg">Enquiry List</h2>
      </div>

      <!-- FILTERS -->
      <div class="flex flex-wrap gap-3 mb-4">

        <select id="courseFilter" class="border rounded px-3 py-2 text-sm">
          <option value="all">Filter by Course</option>
          <% [...new Set(enquiries.map(e => e.courseName).filter(Boolean))].forEach(course => { %>
            <option value="<%= course %>"><%= course %></option>
          <% }) %>
        </select>

        <select id="statusFilter" class="border rounded px-3 py-2 text-sm">
          <option value="all">Status</option>
          <option value="new">New</option>
          <option value="contacted">Contacted</option>
          <option value="enrolled">Enrolled</option>
          <option value="closed">Closed</option>
        </select>

        <button
          onclick="applyFilters()"
          class="bg-gray-900 text-white px-4 py-2 rounded text-sm"
        >
          Apply
        </button>

      </div>

      <!-- TABLE -->
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead class="text-gray-500 border-b">
            <tr>
              <th class="text-left py-2">Name</th>
              <th class="text-left py-2">Email</th>
              <th class="text-left py-2">Phone</th>
              <th class="text-left py-2">Source</th>
              <th class="text-left py-2">Course</th>
              <th class="text-left py-2">Status</th>
              <th class="text-left py-2">Actions</th>
            </tr>
          </thead>

          <tbody id="enquiryTable">
            <% enquiries.forEach(enquiry => { %>
              <tr
                class="border-b"
                data-course="<%= enquiry.courseName || '-' %>"
                data-status="<%= enquiry.status %>"
              >

                <td class="py-3 font-medium"><%= enquiry.name %></td>
                <td class="py-3"><%= enquiry.email %></td>
                <td class="py-3"><%= enquiry.phone %></td>
                <td class="py-3 capitalize"><%= enquiry.source %></td>
                <td class="py-3"><%= enquiry.courseName || '-' %></td>

                <td class="py-3">
                  <span class="px-2 py-1 rounded-full text-xs font-semibold
                    <%= enquiry.status === 'new' ? 'bg-blue-100 text-blue-700' :
                        enquiry.status === 'contacted' ? 'bg-yellow-100 text-yellow-700' :
                        enquiry.status === 'enrolled' ? 'bg-green-100 text-green-700' :
                        'bg-gray-200 text-gray-700' %>">
                    <%= enquiry.status %>
                  </span>
                </td>

                <td class="py-3">
                  <a
                    href="/enquiries/<%= enquiry._id %>"
                    class="text-blue-600 hover:underline"
                  >
                    View
                  </a>
                </td>

              </tr>
            <% }) %>
          </tbody>

        </table>
      </div>

    </div>

  </main>
</div>

<script>
  function applyFilters() {
    const course = document.getElementById("courseFilter").value;
    const status = document.getElementById("statusFilter").value;

    const rows = document.querySelectorAll("#enquiryTable tr");

    rows.forEach(row => {
      const rowCourse = row.dataset.course;
      const rowStatus = row.dataset.status;

      let visible = true;

      if (course !== "all" && rowCourse !== course) visible = false;
      if (status !== "all" && rowStatus !== status) visible = false;

      row.style.display = visible ? "" : "none";
    });
  }
</script>

</body>
</html>
