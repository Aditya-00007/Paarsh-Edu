<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Paarsh Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-slate-100 flex items-center justify-center">

  <!-- CARD -->
  <div class="w-full max-w-md bg-white rounded-2xl shadow-xl px-8 py-10">

    <!-- HEADING -->
    <h1 class="text-2xl font-bold text-sky-600 text-center">
      Paarsh Admin
    </h1>
    <p class="text-sm text-gray-500 text-center mb-8">
      Admin Panel Login
    </p>

    <!-- ERROR -->
    <% if (error) { %>
      <div class="mb-4 text-sm text-red-600 bg-red-50 px-4 py-2 rounded-lg text-center">
        <%= error %>
      </div>
    <% } %>

    <!-- FORM -->
    <form action="/auth/login" method="POST" class="space-y-5">

      <!-- EMAIL -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Email Address
        </label>
        <input
          type="email"
          name="email"
          placeholder="admin@paarsh.com"
          required
          class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm
                 focus:outline-none focus:ring-2 focus:ring-sky-500"
        />
      </div>

      <!-- PASSWORD -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Password
        </label>
        <input
          type="password"
          name="password"
          placeholder="••••••••"
          required
          class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm
                 focus:outline-none focus:ring-2 focus:ring-sky-500"
        />
      </div>

      <!-- BUTTON -->
      <button
        type="submit"
        class="w-full bg-sky-600 hover:bg-sky-700 text-white py-3 rounded-lg
               font-semibold transition">
        Login
      </button>
    </form>

    <!-- FOOTER TEXT -->
    <p class="text-xs text-gray-400 text-center mt-6">
      Authorized Admins Only
    </p>

  </div>

</body>
</html>