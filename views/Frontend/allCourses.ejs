<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Courses</title>

  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- HEADER -->
  <%- include("../partials/Frontend-header") %>

  <!-- PAGE CONTAINER -->
  <div class="max-w-7xl mx-auto px-6 py-12">

    <!-- TITLE -->
    <h1 class="text-4xl font-bold mb-3">
      All <span class="text-sky-500">Courses</span>
    </h1>

    <p class="text-gray-600 max-w-3xl mb-12">
      Discover a wide range of courses designed to enhance your skills, boost your knowledge,
      and help you achieve your goalsâ€”learn at your own pace anytime, anywhere!
    </p>

    <!-- COURSES GRID -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

      <% courses.forEach(course => { %>

        <!-- COURSE CARD -->
        <div class="bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-xl transition duration-300">

          <!-- IMAGE -->
          <img
            src="<%= course.thumbnail %>"
            alt="<%= course.title %>"
            class="h-60 w-full object-cover"
          />

          <!-- CONTENT -->
          <div class="p-6">

            <!-- TITLE -->
            <h2 class="text-lg font-semibold text-gray-900 mb-1">
              <%= course.title %>
            </h2>

            <!-- DESCRIPTION -->
            <p class="text-sm text-gray-500 mb-4 leading-relaxed">
              <%= course.shortDescription %>
            </p>

            <!-- TAGS -->
            <div class="flex flex-wrap gap-2 mb-6 text-xs font-medium">
              <span class="bg-sky-50 text-sky-600 px-3 py-1 rounded-full">
                â± <%= course.duration %>
              </span>
              <span class="bg-indigo-50 text-indigo-600 px-3 py-1 rounded-full">
                ğŸ“˜ <%= course.level %>
              </span>
              <span class="bg-emerald-50 text-emerald-600 px-3 py-1 rounded-full">
                ğŸ‘¨â€ğŸ“ <%= course.enrolledCount %>
              </span>
            </div>

            <!-- FOOTER -->
            <div class="flex items-center justify-between">
              <p class="text-lg font-semibold text-sky-600">
                â‚¹<%= course.fee %>
              </p>

              <a
                href="/courses/<%= course._id %>"
                class="bg-sky-500 hover:bg-sky-600 text-white text-sm px-6 py-2 rounded-full transition"
              >
                View Details
              </a>
            </div>

          </div>
        </div>

      <% }) %>

    </div>
  </div>

  <!-- FOOTER -->
  <%- include("../partials/Frontend-footer") %>

</body>
</html>
