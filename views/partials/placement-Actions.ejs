<!-- ADD COMPANY MODAL -->
<div
  id="addCompanyModal"
  class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center hidden z-50">

  <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-6">
    <h3 class="text-lg font-semibold mb-4">Add Company</h3>

    <form action="/placement-management/company/add" method="POST" class="space-y-4">

      <div>
        <label class="block text-sm font-medium mb-1">Company Name</label>
        <input
          type="text"
          name="name"
          required
          class="w-full border rounded px-3 py-2 text-sm"
          placeholder="e.g. TCS, Infosys" />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Industry</label>
        <input
          type="text"
          name="industry"
          class="w-full border rounded px-3 py-2 text-sm"
          placeholder="IT Services" />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Location</label>
        <input
          type="text"
          name="location"
          class="w-full border rounded px-3 py-2 text-sm"
          placeholder="Pune / Remote" />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">HR Name</label>
        <input
          type="text"
          name="hrName"
          class="w-full border rounded px-3 py-2 text-sm" />
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">HR Contact</label>
        <input
          type="text"
          name="hrEmail"
          class="w-full border rounded px-3 py-2 text-sm"
          placeholder="Email" />
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Company Contact</label>
        <input
          type="text"
          name="companyEmail"
          class="w-full border rounded px-3 py-2 text-sm"
          placeholder="Official company Email" />
      </div>

      <!-- ACTIONS -->
      <div class="flex justify-end gap-2 pt-4">
        <button
          type="button"
          onclick="closeAddCompanyModal()"
          class="px-4 py-2 text-sm border rounded hover:bg-gray-100">
          Cancel
        </button>

        <button
          type="submit"
          class="px-4 py-2 text-sm bg-blue-600 text-white rounded hover:bg-blue-700">
          Save Company
        </button>
      </div>

    </form>
  </div>
</div>

<!-- ASSIGN INTERVIEW MODAL -->
<div
  id="assignInterviewModal"
  class="fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center hidden z-50">

  <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-6">
    <h3 class="text-lg font-semibold mb-4">Assign Interview</h3>

    <form action="/placement-management/interview/add" method="POST" class="space-y-4">

      <!-- Hidden fields -->
      <input type="hidden" name="enrollmentId" id="interviewEnrollmentId" />
      <input type="hidden" name="studentId" id="interviewStudentId" />
      <!-- Company -->
      <div>
  <label class="block text-sm font-medium mb-1">Company</label>
  <select
    name="companyId"
    required
    class="w-full border rounded px-3 py-2 text-sm">

    <option value="">Select Company</option>

    <% if (companies && companies.length) { %>
      <% companies.forEach(company => { %>
        <option value="<%= company._id %>">
          <%= company.name %>
        </option>
      <% }) %>
    <% } else { %>
      <option disabled>No companies available</option>
    <% } %>

  </select>
</div>


      <!-- Interview Date & Time -->
      <div>
        <label class="block text-sm font-medium mb-1">Interview Date & Time</label>
        <input
          type="datetime-local"
          name="scheduledAt"
          required
          class="w-full border rounded px-3 py-2 text-sm" />
      </div>

      <!-- Meeting Link -->
      <div>
        <label class="block text-sm font-medium mb-1">Meeting Link</label>
        <input
          type="url"
          name="meetingLink"
          required
          placeholder="https://meet.google.com/..."
          class="w-full border rounded px-3 py-2 text-sm" />
      </div>

      <!-- Remarks -->
      <div>
        <label class="block text-sm font-medium mb-1">Remarks (optional)</label>
        <textarea
          name="adminRemarks"
          rows="3"
          class="w-full border rounded px-3 py-2 text-sm"></textarea>
      </div>

      <!-- ACTIONS -->
      <div class="flex justify-end gap-2 pt-4">
        <button
          type="button"
          onclick="closeInterviewModal()"
          class="px-4 py-2 text-sm border rounded hover:bg-gray-100">
          Cancel
        </button>

        <button
          type="submit"
          class="px-4 py-2 text-sm bg-blue-600 text-white rounded hover:bg-blue-700">
          Assign Interview
        </button>
      </div>

    </form>
  </div>
</div>
