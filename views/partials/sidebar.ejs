<!-- SIDEBAR -->
<aside id="sidebar" class="w-[260px] bg-[#212529] min-h-[calc(100vh-60px)] p-4 transition-all duration-300">
  <ul class="space-y-2">

    <li>
      <a href="/dashboard" class="block px-3 py-3 rounded-lg text-[#adb5bd] hover:bg-[#343a40] hover:text-white transition">
        Dashboard
      </a>
    </li>

    <li>
      <a href="/course-management"
        class="block px-3 py-3 rounded-lg text-[#adb5bd] hover:bg-[#343a40] hover:text-white transition">
        Course Management
      </a>
    </li>

    <li>
      <a href="/admin/blogs"
        class="block px-3 py-3 rounded-lg text-[#adb5bd] hover:bg-[#343a40] hover:text-white transition">
        Blog Management
      </a>
    </li>

    <% const menuItems=[ "Student Management" ,  "Enquiries"]; %>
    <% menuItems.forEach(item => {
        const path = "/" + item.toLowerCase().replace(/\s+/g, "-");
    %>
      <li>
        <a href="<%= path %>"
          class="block px-3 py-3 rounded-lg text-[#adb5bd] hover:bg-[#343a40] hover:text-white transition">
          <%= item %>
        </a>
      </li>
    <% }) %>

    <li class="pt-2 border-t border-white/20">
      <a href="/auth/logout"
        class="block px-3 py-3 rounded-lg text-red-400 hover:bg-red-500/20 font-semibold transition">
        Logout
      </a>
    </li>

  </ul>
</aside>
<script>
  //Toggle dropdown                   
  function toggleDropdown(menuId) {
    const menu = document.getElementById(menuId);
    menu.classList.toggle('hidden');
  }
  //toggle sidebar
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    if (sidebar.style.display === 'none') {
      sidebar.style.display = 'block';
    } else {
      sidebar.style.display = 'none';
    }
  }
  //active link
  (function () {
    const currentPath = window.location.pathname;

    document.querySelectorAll('#sidebar a').forEach(link => {
      const linkPath = link.getAttribute('href');

      // Ignore logout
      if (!linkPath || linkPath === '/auth/logout') return;

      // Exact match OR sub-route match
      if (
        currentPath === linkPath ||
        (currentPath.startsWith(linkPath) && linkPath !== '/')
      ) {
        link.classList.add('bg-[#343a40]', 'text-white');
        link.classList.remove('text-[#adb5bd]');
      }
    });
  })();
</script>