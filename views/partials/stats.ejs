    </div>
    <div class="text-xs text-gray-400 mt-1">
      Currently published
    </div>
  </div>

  <!-- Draft Courses -->
  <div class="bg-white rounded-xl shadow-sm p-4 hover:-translate-y-1 hover:shadow-md transition-all">
    <div class="flex items-center justify-between">
